<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  BackgroundColor="{StaticResource BG}"  xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PunkteInWedding.Views.RestorePassword" Title="Wiederherstellen">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Abbrechen" Clicked="ToolbarItem_Clicked"/>
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Margin="10">
			<Label  Text="Zur Wiederherstellung deines Accounts gebe deine backup Email Adresse ein. Wenn ein passender Account gefunden wurde, schicken wir dir eine Email mit einem Bestätigungslink" FontSize="Medium"/>
			<Entry x:Name="eEmail" Placeholder="Backup Email"/>
			<Button Text="Senden" Clicked="Button_Clicked" Style="{StaticResource Info}"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>